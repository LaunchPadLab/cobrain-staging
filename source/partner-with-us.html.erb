<section class="form-wrapper split-block-wrapper">
  <div class="split-block">
    <div class="split-block-content">
      <h2>Reach out to us</h2>
      <p>If you’re interested in learning more about us, send us a message and we’ll get back to you!</p>
      <form action="https://formspree.io/feedback@cobrain.com" method="POST" target="_blank">
        <div class="field">
          <label>Name</label>
          <input type="text" name="name" required>
        </div>
        <div class="half-fields">
          <div class="field half-field">
            <label>Email</label>
            <input type="email" name="email" placholder="Email address" required>
          </div>
          <div class="field half-field">
            <label>Phone</label>
            <input type="text" name="phone">
          </div>
        </div>
        <div class="field">
          <label>Message</label>
          <textarea type="text" name="message" required></textarea>
        </div>
        <input type="submit" id="form-submit" value="Send" class="button-blue-base">
      </form>
    </div>
  </div>
  <div class="image-block"></div>
</section>